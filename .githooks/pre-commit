#!/usr/bin/env bash
set -e

echo "Running pre-commit checks..."

echo "  TypeScript..."
npx tsc --noEmit

echo "  ESLint..."
npx eslint .

echo "  Prettier..."
npx prettier --check .

echo "  rustfmt..."
cargo fmt --manifest-path src-tauri/Cargo.toml -- --check

echo "  Clippy..."
cargo clippy --manifest-path src-tauri/Cargo.toml -- -D warnings

echo "All checks passed."
